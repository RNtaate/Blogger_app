<h1>Articles Tagged with <%= @tag.name %></h1>

<ul>
  <% @tag.articles.each do |article| %>
    <li><%= link_to article.title, article_path(article) %></li>
  <% end %>
</ul>

<p><%= link_to "Delete this tag", tag_path(@tag), method: :delete, data: {confirm: "Do you want to really delete this tag?"} %> </p>
